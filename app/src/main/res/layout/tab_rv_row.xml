<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivTabWebtoon"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivExclusive"
            android:layout_width="28dp"
            android:layout_height="16dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/icon_exclusive" />

        <TextView
            android:id="@+id/tvRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:text="1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivTabWebtoon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEpisode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="3dp"
            android:gravity="center|start"
            android:text="제407화"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/tvViews"
            app:layout_constraintStart_toEndOf="@+id/ivTabWebtoon"
            app:layout_constraintTop_toBottomOf="@+id/tvRank" />

        <TextView
            android:id="@+id/tvViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center|left"
            android:text="19만"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivLook" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="1"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvEpisode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvRank"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivHits"
            android:layout_width="26dp"
            android:layout_height="14dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/icon_hits"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivNew" />

        <ImageView
            android:id="@+id/ivLook"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/icon_look"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivTabWebtoon" />

        <ImageView
            android:id="@+id/ivNew"
            android:layout_width="26dp"
            android:layout_height="14dp"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/icon_new"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvViews"
            app:srcCompat="@drawable/icon_new" />

        <ImageView
            android:id="@+id/ivDiscounted"
            android:layout_width="26dp"
            android:layout_height="14dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/icon_discounted"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivHits"
            app:srcCompat="@drawable/icon_discounted" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>